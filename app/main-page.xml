    <ScrollView>
        <StackLayout class="p-4">
            <!-- Stats Cards -->
            <GridLayout rows="auto" columns="*,*,*" class="stats-grid">
                <Repeater items="{{ stats }}" colSpan="3">
                    <Repeater.itemsLayout>
                        <GridLayout columns="*,*,*" />
