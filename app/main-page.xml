                        <goal:GoalProgress />
                    </Repeater.itemTemplate>
                </Repeater>
            </StackLayout>

            <!-- Transactions -->
            <StackLayout class="card">
                <Label text="Transactions rÃ©centes" class="header" />
                <ListView items="{{ transactions }}" class="list-group">
                    <ListView.itemTemplate>
                        <transaction:TransactionItem />
                    </ListView.itemTemplate>
                </ListView>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</Page>